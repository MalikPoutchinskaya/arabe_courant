<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="category"
            type="com.poutchinskaya.malik.sotunisia.model.Category" />
    </data>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">

            <ImageView
                android:id="@+id/category_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                app:imageUrl="@{category.thumbnail}" />

            <TextView
                android:id="@+id/category_title"
                style="@style/category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_thumbnail"
                android:ellipsize="end"
                android:text="@{category.title}" />

            <TextView
                android:id="@+id/category_number"
                style="@style/category_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_title"
                android:text="@{String.format(@string/words_number, Integer.toString(category.words.size()))}" />


            <RatingBar
                style="?attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/category_title"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="@{category.score.value}"
                android:stepSize="0.5"
                android:theme="@style/RatingBar" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
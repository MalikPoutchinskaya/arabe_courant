<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#cce5ff">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewVocab"
            android:src="@drawable/vocab_start"
            android:layout_marginTop="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewPrononciation"
            android:src="@drawable/prononciation_start"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/imageViewVocab"
            android:layout_alignLeft="@+id/imageViewVocab"
            android:layout_alignStart="@+id/imageViewVocab" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewPhrases"
            android:src="@drawable/phrases_start"
            android:layout_alignTop="@+id/imageViewPrononciation"
            android:layout_alignLeft="@+id/imageViewGrammaire"
            android:layout_alignStart="@+id/imageViewGrammaire" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewGrammaire"
            android:src="@drawable/grammaire_start"
            android:layout_alignTop="@+id/imageViewVocab"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="34dp"
            android:layout_marginEnd="34dp" />
    </RelativeLayout>
</LinearLayout>
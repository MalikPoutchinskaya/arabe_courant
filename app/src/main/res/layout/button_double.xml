<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_double_button"
        android:elevation="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_search_fragment_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_search_black_24px"
            android:gravity="center"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:text="RECHERCHER"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/action_filter_fragment_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_filter_list_black_24px"
            android:gravity="center"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:text="FILTRER"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</merge>
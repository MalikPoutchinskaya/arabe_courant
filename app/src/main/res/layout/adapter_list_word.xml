<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="word"
            type="com.poutchinskaya.malik.sotunisia.model.Word" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/french_word_search"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:text="@{word.french}" />

        <TextView
            android:id="@+id/arabic_word_search"
            style="@style/arabic_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/french_word_search"
            android:layout_alignRight="@+id/french_word_search"
            android:layout_below="@+id/french_word_search"
            android:gravity="end"
            android:paddingBottom="20dp"
            android:text="@{word.arabic}" />

    </RelativeLayout>
</layout>